<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ZuriChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/status_bar_color</item>
        <item name="colorAccent">@color/primary_color_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Custom Style For Commonly Used Views -->
        <item name="textInputStyle">@style/TextInputLayout</item>
        <item name="materialButtonStyle">@style/BrandedButton</item>
        <item name="materialCardViewStyle">@style/Card</item>
        <item name="editTextStyle">@style/EditText</item>
    </style>

    <style name="Theme.ZuriChat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ZuriChat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ZuriChat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ZuriChat.SplashScreen" parent="Theme.ZuriChat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--Button-->
    <style name="BrandedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:theme">@style/Theme.MaterialComponents</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="BrandedButton.OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <!--Text Input-->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">14dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="errorEnabled">true</item>
    </style>
    <style name="DropDownInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#757575</item>
    </style>

    <!--Card-->
    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="contentPadding">10dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="titleMarginStart">24dp</item>
    </style>
    <style name="Toolbar.TitleText">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>
    <style name="Toolbar.SubtitleText" parent="Toolbar">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>
    <style name="Toolbar.MenuItem" parent="Toolbar.SubtitleText">
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Tab Layout -->
    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabTextColor">@android:color/white</item>
    </style>
</resources>