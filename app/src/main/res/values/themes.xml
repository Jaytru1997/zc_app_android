<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ZuriChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/TextInputLayout</item>
        <item name="materialButtonStyle">@style/BrandedButton</item>
        <item name="materialCardViewStyle">@style/Card</item>
        <item name="editTextStyle">@style/EditText</item>
    </style>

    <style name="Theme.ZuriChat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ZuriChat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ZuriChat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Button-->
    <style name="BrandedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:theme">@style/Theme.MaterialComponents</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="BrandedButton.OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <!--Text Input-->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">14dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="errorEnabled">true</item>
    </style>
    <style name="DropDownInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#757575</item>
    </style>

    <!--Card-->
    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="contentPadding">10dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>